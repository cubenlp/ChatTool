#!/bin/bash
# 阿里云动态DNS更新 - 环境变量配置示例

# ==================== 阿里云认证配置 ====================
# 请在阿里云控制台 > AccessKey 管理中获取 Access Key ID 和 Access Key Secret
# 官方文档：https://www.alibabacloud.com/help/zh/ram/user-guide/create-an-accesskey-pair

# 阿里云 Access Key ID（必须）
export ALIBABA_CLOUD_ACCESS_KEY_ID="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# 阿里云 Access Key Secret（必须）
export ALIBABA_CLOUD_ACCESS_KEY_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# 阿里云区域ID（可选，默认为cn-hangzhou）
export ALIBABA_CLOUD_REGION_ID="cn-hangzhou"
